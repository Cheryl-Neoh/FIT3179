{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 800,
  "height": 600,
  "data": {
    "url": "https://cheryl-neoh.github.io/FIT3179/Assignment 2/Data/Malaysian-states.json",
    "format": {
      "type": "topojson",
      "feature": "states"
    }
  },
  "signals": [
    {
      "name": "Year",
      "bind": {"input": "YearFilter", "min": 2017, "max": 2019, "step": 1},
      "value": 2017
    }
  ],
  "transform": [{
    "lookup": "id",
    "from": {
      "data": {
        "url": "https://cheryl-neoh.github.io/FIT3179/Assignment 2/Data/2017-TotalCrimes.csv"
      },
      "key": "id",
      "fields": ["Rate per 100,000 people", "Year", "Total cases"],
      "transform" : { "filter": "datum.Year == YearFilter ? 0.5 : 0"}
    }
  }],
  "projection": {
    "type": "mercator"
  },
  "mark": "geoshape",
  "encoding": {
    "color": {
      "field": "Rate per 100,000 people",
      "type": "quantitative"
    },
    "tooltip": [
      {"field": "id", "type": "nominal", "title": "Country"},
      {"field": "Rate per 100,000 people", "type": "quantitative"},
      {"field": "Total cases", "type": "quantitative"},
      {"field": "Year", "type": "quantitative"}
    ]
  }
}
